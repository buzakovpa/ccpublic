@using CC.MODELS
@using CC.WEB.Helpers
@model CC.MODELS.ShopProduct

@{
    ViewBag.Title = "Удаление";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Удаление
                <small>
                    @Html.GetSubtitles(UiElement.Aliass.AdminShopDelete)
                </small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Главная", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Список товаров", "Index", "ShopProduct")
                </li>
                <li class="active">Удаление</li>
            </ol>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <form class="form-horizontal" method="POST">
                @Html.HiddenFor(a => a.ShopProductId)

                <fieldset>
                    <legend>Товар</legend>
                    
                    <div class="form-group">
                        <label for="UrlAlias" class="col-lg-2 control-label">Alias</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="UrlAlias" name="UrlAlias" 
                                   placeholder="Alias" readonly="readonly" disabled="disabled" value="@Model.UrlAlias">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(a => a.Category.ShopCategoryId, "Категория", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.TextBoxFor(a => a.Category.Title, new {@class="form-control", @placeholder="Категория", @readonly="readonly", @disabled="disabled"})
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Title" class="col-lg-2 control-label">Название</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="Title" name="Title" 
                                   placeholder="Название" readonly="readonly" disabled="disabled" value="@Model.Title">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(a=>a.Show, new {@readonly="readonly", @disabled="disabled"}) Показывать
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(a => a.ShortDescription, "Описание", new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextAreaFor(a => a.ShortDescription, new { @class = "form-control", @placeholder = "Описание", @readonly = "readonly", @disabled = "disabled" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.FullDescription, "Описание", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.TextAreaFor(a => a.FullDescription, new { @class = "form-control", @placeholder = "Описание", @readonly = "readonly", @disabled = "disabled" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(a => a.PurchasePrice, "Цена закупки", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.TextBoxFor(a => a.PurchasePrice, new {@class="form-control", @placeholder="Цена закупки", @readonly="readonly", @disabled="disabled"})
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(a => a.SellingPrice, "Цена продажи", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.TextBoxFor(a => a.SellingPrice, new {@class="form-control", @placeholder="Цена продажи", @readonly="readonly", @disabled="disabled"})
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <a class="btn btn-default" href="@Url.Action("Index")">Отмена</a>
                            <button type="submit" class="btn btn-danger">Удалить</button>
                        </div>
                    </div>
                
                </fieldset>
            </form>
        </div>
    </div>
</div>