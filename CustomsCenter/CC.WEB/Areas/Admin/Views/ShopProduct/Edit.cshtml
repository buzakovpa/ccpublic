
@using CC.MODELS
@using CC.WEB.Helpers
@model CC.WEB.Areas.Admin.ViewModels.Shop.ShopProductEditModel

@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @Model.Title
                <small>
                    @Html.GetSubtitles(UiElement.Aliass.AdminShopEdit)
                </small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Главная", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Список товаров", "Index", "ShopCategory")
                </li>
                <li class="active">
                    @Model.Title
                </li>
            </ol>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            
            <form class="form-horizontal" method="POST">
                @Html.HiddenFor(a=>a.Product.ShopProductId)

                <fieldset>
                    <legend>Товар</legend>
                    
                    <div class="form-group">
                        <label for="Product_UrlAlias" class="col-lg-2 control-label">Alias</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="Product_UrlAlias" name="Product.UrlAlias" 
                                placeholder="Alias" value="@Model.Product.UrlAlias">
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        @Html.LabelFor(a => a.Product.Category.ShopCategoryId, "Категория", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.DropDownListFor(a => a.Product.Category.ShopCategoryId, Model.CategorySelectList, new {@class="form-control", @placeholder="Категория"})
                        </div>
                    </div>
                    <br>
                    
                    <div class="form-group">
                        <label for="Product_Title" class="col-lg-2 control-label">Название</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="Product_Title" name="Product.Title" 
                                placeholder="Название" value="@Model.Product.Title">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(a=>a.Product.Show) Показывать
                                </label>
                            </div>
                        </div>
                    </div>
                    <br>

                    <div class="form-group">
                        @Html.LabelFor(a => a.Product.Description, "Описание", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.TextAreaFor(a => a.Product.Description, new {@class="form-control", @placeholder="Описание"})
                        </div>
                    </div>
                    <br>
                    
                    <div class="form-group">
                        @Html.LabelFor(a => a.Product.PurchasePrice, "Цена закупки", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.TextBoxFor(a => a.Product.PurchasePrice, new {@class="form-control", @placeholder="Цена закупки"})
                        </div>
                    </div>
                    <br>
                    
                    <div class="form-group">
                        @Html.LabelFor(a => a.Product.SellingPrice, "Цена продажи", new {@class="col-lg-2 control-label"})
                        <div class="col-lg-10">
                            @Html.TextBoxFor(a => a.Product.SellingPrice, new {@class="form-control", @placeholder="Цена продажи"})
                        </div>
                    </div>
                    <br>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <a class="btn btn-default" href="@Url.Action("Index")">Отмена</a>
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
</div>