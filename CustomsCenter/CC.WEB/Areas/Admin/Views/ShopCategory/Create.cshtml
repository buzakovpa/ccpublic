@using CC.MODELS
@using CC.WEB.Helpers
@model CC.WEB.Areas.Admin.ViewModels.Shop.ShopCategoryCreateModel

@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @Model.Title
                <small>
                    @Html.GetSubtitles(UiElement.Aliass.AdminShopCreate)
                </small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Главная", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Категории товаров", "Index", "ShopCategory")
                </li>
                <li class="active">
                    @Model.Title
                </li>
            </ol>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            
            <form class="form-horizontal" method="POST">
                <fieldset>
                    <legend>Категория</legend>
                    
                    <div class="form-group">
                        <label for="Category_UrlAlias" class="col-lg-2 control-label">Alias</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="Category_UrlAlias" name="Category.UrlAlias" placeholder="Alias">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Category_Title" class="col-lg-2 control-label">Название</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="Category_Title" name="Category.Title" placeholder="Название">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(a=>a.Category.Show) Показывать
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <a class="btn btn-default" href="@Url.Action("Index")">Отмена</a>
                            <button type="submit" class="btn btn-primary">Создать</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
</div>